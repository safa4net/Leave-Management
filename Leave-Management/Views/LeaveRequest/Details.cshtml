@model Leave_Management.Models.ViewModels.LeaveRequestViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>بررسی جزئیات درخواست مرخصی @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.Lastname</h1>
<h4>@Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)</h4>*@

@if (Model.Approved == null)
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">در دست بررسی <i class="far fa-hourglass"></i></h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong> @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.Lastname <br />
        </p>
        <hr/>
        <p>
            @Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)
        </p>
    </div>
}
else if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">تائید شده توسط @Model.ApprovedBy.Firstname @Model.ApprovedBy.Lastname</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong> @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.Lastname  <br />
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)
        </p>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Rejected by @Model.ApprovedBy.Firstname @Model.ApprovedBy.Lastname</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong> @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.Lastname <br />
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)
        </p>
    </div>
}


<div>
    <hr />
    <dl class="row">
        @*<dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>*@
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingEmployee)
        </dt>
        <dd class="col-sm-10">
            @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.Lastname
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateRequested)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateRequested)
        </dd>*@
        @*<dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateActioned)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateActioned)
            </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Approved)
        </dt>
        @if (Model.Approved == true)
        {
            <dd class="col-sm-10">
                <span class="badge badge-success">تائید شده <i class="fa fa-check"></i></span>
            </dd>
        }
        else if (Model.Approved == false)
        {
            <dd class="col-sm-10">
                <span class="badge badge-danger">تائید نشده <i class="fas fa-ban"></i></span>
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                <span class="badge badge-warning">در دست بررسی <i class="far fa-hourglass"></i></span>
            </dd>
        }

        @*<dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ApprovedById)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ApprovedById)
            </dd>*@
    </dl>
</div>
<div>
    @if (Model.Approved==null)
    {
        <a class="btn btn-success" asp-action="ApproveRequest" asp-route-id="@Model.Id">
            <i class="far fa-check"></i> تائید
        </a>
        <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id">
            <i class="fas fa-ban"></i> عدم تائید
        </a>
    }
    

    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fa fa-arrow-left"></i> بازگشت</a>
</div>
