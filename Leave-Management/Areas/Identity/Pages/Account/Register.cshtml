@page
@model RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="register-box">
    <div class="register-logo">
        @*<b>ثبت نام در سایت</b>*@
        <i class="fa fa-user-plus fa-3x" aria-hidden="true"></i>
        @*<ion-icon size="large" color="blue" name="person-add-outline"></ion-icon>*@
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg text-sm">جهت تکمیل ثبت نام حتما از یک ایمیل معتبر استفاده نمائید.</p>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Firstname" type="text" class="form-control" placeholder="نام">
                    <div class="input-group-append">
                        <span class="fa fa-user input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Lastname" type="text" class="form-control" placeholder="نام خانوادگی">
                    <div class="input-group-append">
                        <span class="fa fa-user input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="email" class="form-control" placeholder="ایمیل">
                    <div class="input-group-append">
                        <span class="fa fa-envelope input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.PhoneNumber" type="email" class="form-control" placeholder="تلفن همراه">
                    <div class="input-group-append">
                        <span class="fa fa-phone input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="رمز عبور">
                    <div class="input-group-append">
                        <span class="fa fa-lock input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="تکرار رمز عبور">
                    <div class="input-group-append">
                        <span class="fa fa-lock input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="row">
                    @*<div class="col-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> با <a href="#">شرایط</a> موافق هستم
                        </label>
                    </div>
                </div>*@
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">ثبت نام</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            @*<div class="social-auth-links text-center">
            <p>- یا -</p>
            <a href="#" class="btn btn-block btn-primary">
                <i class="fa fa-facebook mr-2"></i>
                ثبت نام با اکانت فیس بود
            </a>
            <a href="#" class="btn btn-block btn-danger">
                <i class="fa fa-google-plus mr-2"></i>
                ثبت نام با گوگل
            </a>
        </div>*@
            <br />
            <a asp-page="./Login" class="text-center">من قبلا ثبت نام کرده ام</a>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.register-box -->



