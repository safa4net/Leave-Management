<h4>مرخصی های اختصاص یافته</h4>
@{
    <div class="card">
        <ul class="list-group list-group-flush">
            @foreach (var item in Model.LeaveAllocations)
            {
            <li class="list-group-item">
                <h6>
                    @item.LeaveType.Name 
                    <span class="badge badge-info">
                        @item.NumberOfDays
                    </span>
                    <a asp-action="Edit" asp-controller="LeaveAllocation" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm text-black-50">
                        <i class="fa fa-pencil"></i> ویرایش
                    </a>
                </h6>
            </li>
            }
        </ul>
    </div>
}
