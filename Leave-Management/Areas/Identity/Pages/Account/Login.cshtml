@page
@model LoginModel

@{
    ViewData["Title"] = "ورود به سیستم";
}
<div class="login-box">
    <div class="login-logo">
        <i class="fa fa-lock fa-3x" aria-hidden="true"></i>
        @*<a asp-page="./Login"><b>ورود به سایت</b></a>*@
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">فرم زیر را تکمیل کنید و دکمه ورود را بزنید</p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="ایمیل">
                    <div class="input-group-append">
                        <span class="fa fa-envelope input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="رمز عبور">
                    <div class="input-group-append">
                        <span class="fa fa-lock input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="checkbox icheck" id="iCheck" style="margin-top: 8px;">
                            <label>
                                <input asp-for="Input.RememberMe" type="checkbox"> یاد آوری من
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">ورود</button>
                    </div>
                    <!-- /.col -->
                </div>
                <br />

                @*<div class="social-auth-links text-center mb-3">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-primary">
                <i class="fa fa-facebook mr-2"></i> ورود با اکانت فیسوبک
            </a>
            <a href="#" class="btn btn-block btn-danger">
                <i class="fa fa-google-plus mr-2"></i> ورود با اکانت گوگل
            </a>
        </div>*@
                <!-- /.social-auth-links -->
                <p class="mb-1">
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">ارسال مجدد ایمیل فعال سازی</a>
                </p>
                <p class="mb-1">
                    <a id="forgot-password" asp-page="./ForgotPassword">رمز عبورم را فراموش کرده ام.</a>
                </p>
                <p class="mb-0">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">ثبت نام</a>
                </p>

            </form>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            $('#iCheck').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        })
    </script>
}
